[user]
    name = Mateusz Cieciura
    email = mateusz5000@gmail.com
[color]
    ui = true
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green bold
    untracked = red
[alias]
    s = status
    st = status
    sts = status -s
    ci = commit
    a = add
    co = checkout
    gr = log --graph --abbrev-commit --decorate --date=relative --format=format:'%h - %ar %s - %an%d' --all
    gr2 = log --oneline --graph --decorate
    b = branch
    l = log
    dt = difftool
    mt = mergetool
    df = diff
[merge]
    tool = kdiff3
[mergetool]
    prompt = false
[diff]
    tool = kdiff3
[difftool]
    prompt = false
